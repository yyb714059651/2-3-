var res = 0;
//获取验证码
function getRandImg() {
	 document.getElementById('rc').src='/checkimage.action?r='+Math.random();
}
layer.config({
	skin:'layer-ext-moon',
	extend:'skin/moon/style.css'
});
//检验验证码是否正确
function checkLoginCode(){
	$.post("/inc/chekCode.jsp",{"r":Math.random() * 10000},function(data){
		var text = $.trim(data);
		var code = $("#r_code").val();
		if (text != code) {
			$("#r_code").removeClass().addClass("amdin-login-nr-k-x-cuo");
			$("#r_code").val('');
			return;
		} else {
			$("#r_code").removeClass().addClass("amdin-login-nr-k-x-dui");
		}
	});
}
$(function(){
	$('#r_code').bind('keyup', function(event) {
		if (event.keyCode == "13") {
			login();
		}
	});
});
// 前台登录所用方法
function login() {
	var name = $('#name').val();
	var pwd = $("#pwd").val();
	var r_code = $("#r_code").val();
	if (name == '') {
		$("#name_tips").html("<img src='/eguUsers/images/login_error.png' /><b>请输入您的手机号码或用户名</b>");
		$("#name").focus();
		return false;
	}
	$("#name_tips").html("&nbsp;");
	if (pwd == '') {
		$("#pwd_tips").html("<img src='/eguUsers/images/login_error.png' /><b>请输入您的账户密码</b>");
		$("#pwd").focus();
		return false;
	}
	$("#pwd_tips").html("&nbsp;");
	if (r_code == '' || r_code.length<4) {
		$("#r_code").removeClass().addClass("amdin-login-nr-k-x-cuo");
		return false;
	} else {
			var _name=encodeURI(name,"UTF-8")
			var fromData={"r_code":r_code,"membername":_name,"memberpwd":pwd};
			$.post("/web/loginAuth.action", fromData,function(data){
				 layer.msg(data.msg, {icon: 0,skin: 'layer-ext-moon'} );
				 if(data.status=='0'){
					 window.location.href='/web/login.action';
				 }
			},
			"json"
		);
	}	
}

